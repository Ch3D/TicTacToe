<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Button" parent="android:Widget.DeviceDefault.Button" />

    <style name="Button.GameField" />

    <style name="Button.GameField.Cell">
        <item name="android:layout_width">@dimen/game_field_cell_size</item>
        <item name="android:layout_height">@dimen/game_field_cell_size</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Button.GameMode">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:listPreferredItemHeightLarge</item>
    </style>

    <style name="Button.Replay" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/bg_btn_replay</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
